<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    tools:context=".ResultsHistoryActivity">

    <jp.kyoto.nlp.kanken.CustomToolBar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentInsetEnd="0dp"
        app:contentInsetStart="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:title_image="@drawable/text_header_results_history">

    </jp.kyoto.nlp.kanken.CustomToolBar>

    <LinearLayout
        android:id="@+id/linearLayoutHeaders"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FCD86B"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <TextView
            android:id="@+id/textViewHeaderDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="14dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="0000-00-00"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textViewHeaderReadingRights"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="0"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textViewHeaderReadingWrongs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="0"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textViewHeaderWritingRights"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="0"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textViewHeaderWritingWrongs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="0"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textViewHeaderTotalRights"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="0"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textViewHeaderTotalWrongs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="14dp"
            android:paddingBottom="10dp"
            android:text="0"
            android:textAlignment="center" />
    </LinearLayout>

    <ListView
        android:id="@+id/listViewResultEntries"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/buttonTextView"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutHeaders"
        tools:listitem="@layout/view_results_history_item">

    </ListView>

    <Button
        android:id="@+id/buttonTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text"
        app:layout_constraintBottom_toTopOf="@+id/buttonBack"
        app:layout_constraintEnd_toStartOf="@id/buttonGraphicView"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/buttonGraphicView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Graphic"
        app:layout_constraintBottom_toTopOf="@+id/buttonBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/buttonTextView" />

    <ImageButton
        android:id="@+id/buttonBack"
        android:layout_width="@dimen/btn_main_width"
        android:layout_height="@dimen/btn_main_height"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/btn_kadomaru"
        android:onClick="leaveResultsHistory"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

                app:srcCompat="@drawable/text_btn_back" />

</android.support.constraint.ConstraintLayout>
