<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReadingProblemActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayoutReadingProblemInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewReadingProblemInfoLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textViewReadingProblemInfoTopic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/textViewReadingProblemInfoType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewReadingProblemNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp" />

        <WebView
            android:id="@+id/webViewReadingProblemStatement"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="6dp"
            android:layout_weight="1">

        </WebView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/buttonViewReadingProblemArticle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:onClick="showArticle"
                android:text="@string/button_view_article" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewReadingProblemAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="@string/label_answer" />

        <TableLayout
            android:id="@+id/tableLayoutReadingProblemAnswerButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="fill_horizontal"
            android:orientation="horizontal"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/buttonKana01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="enterKana"
                    android:text="*" />

                <Button
                    android:id="@+id/buttonKana02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="enterKana"
                    android:text="*" />

                <Button
                    android:id="@+id/buttonKana03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="enterKana"
                    android:text="*" />

                <Button
                    android:id="@+id/buttonKana04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="enterKana"
                    android:text="*" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/buttonKana05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="enterKana"
                    android:text="*" />

                <Button
                    android:id="@+id/buttonKana06"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="enterKana"
                    android:text="*" />

                <Button
                    android:id="@+id/buttonKana07"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="enterKana"
                    android:text="*" />

                <Button
                    android:id="@+id/buttonKana08"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="enterKana"
                    android:text="*" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/buttonKana09"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="enterKana"
                    android:text="*" />

                <Button
                    android:id="@+id/buttonKana10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="enterKana"
                    android:text="*" />

                <Button
                    android:id="@+id/buttonKana11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="enterKana"
                    android:text="*" />

                <Button
                    android:id="@+id/buttonDeleteKana"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="deleteKana"
                    android:text="@string/button_delete_kana" />

            </TableRow>

        </TableLayout>

        <TextView
            android:id="@+id/textViewReadingProblemUserAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="48sp" />

        <Button
            android:id="@+id/buttonValidateReadingProblemAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="validateAnswer"
            android:text="@string/button_validate_answer" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>