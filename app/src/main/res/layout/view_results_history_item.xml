<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:width="0dp"
            android:background="#FFFFFFFF"
            android:padding="10dp"
            android:paddingStart="24dp"
            android:text="0000-00-00" />

        <TextView
            android:id="@+id/textViewReadingRights"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:width="0dp"
            android:background="#FFFFFFFF"
            android:padding="10dp"
            android:text="0"
            android:textAlignment="textEnd" />

        <TextView
            android:id="@+id/textViewReadingWrongs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:width="0dp"
            android:background="#FFFFFFFF"
            android:padding="10dp"
            android:text="0"
            android:textAlignment="textEnd" />

        <TextView
            android:id="@+id/textViewWritingRights"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:width="0dp"
            android:background="#FFFFFFFF"
            android:padding="10dp"
            android:text="0"
            android:textAlignment="textEnd" />

        <TextView
            android:id="@+id/textViewWritingWrongs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:width="0dp"
            android:background="#FFFFFFFF"
            android:padding="10dp"
            android:text="0"
            android:textAlignment="textEnd" />

        <TextView
            android:id="@+id/textViewTotalRights"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:width="0dp"
            android:background="#FFFFFFFF"
            android:padding="10dp"
            android:text="0"
            android:textAlignment="textEnd" />

        <TextView
            android:id="@+id/textViewTotalWrongs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:width="0dp"
            android:background="#FFFFFFFF"
            android:padding="10dp"
            android:paddingEnd="24dp"
            android:text="0"
            android:textAlignment="textEnd" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>