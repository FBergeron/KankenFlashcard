<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TextResultsHistoryFragment">

    <LinearLayout
        android:id="@+id/linearLayoutHeaders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FCD86B"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewHeaderDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="14dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="0000-00-00"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textViewHeaderReadingRights"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="0"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textViewHeaderReadingWrongs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="0"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textViewHeaderWritingRights"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="0"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textViewHeaderWritingWrongs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="0"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textViewHeaderTotalRights"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="0"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textViewHeaderTotalWrongs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="14dp"
            android:paddingBottom="10dp"
            android:text="0"
            android:textAlignment="center" />
    </LinearLayout>

    <ListView
        android:id="@+id/listViewResultEntries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        tools:listitem="@layout/view_results_history_item">

    </ListView>
</LinearLayout>
