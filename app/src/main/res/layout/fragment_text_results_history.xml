<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TextResultsHistoryFragment">

    <LinearLayout
        android:id="@+id/linearLayoutHeaders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FCD86B"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewHeaderDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:width="0dp"
            android:paddingLeft="24dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="0000-00-00"
            android:textAlignment="textStart" />

        <LinearLayout
            android:id="@+id/linearLayoutReading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#ECC85B"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewHeaderReading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/results_history_header_reading"
                android:textAlignment="center" />

            <LinearLayout
                android:id="@+id/linearLayoutReadingInt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewHeaderReadingRights"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:width="0dp"
                    android:padding="10dp"
                    android:text="0"
                    android:textAlignment="textEnd" />

                <TextView
                    android:id="@+id/textViewHeaderReadingWrongs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:width="0dp"
                    android:padding="10dp"
                    android:text="0"
                    android:textAlignment="textEnd" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutWriting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewHeaderWriting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/results_history_header_writing"
                android:textAlignment="center" />

            <LinearLayout
                android:id="@+id/linearLayoutWritingInt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewHeaderWritingRights"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:width="0dp"
                    android:padding="10dp"
                    android:text="0"
                    android:textAlignment="textEnd" />

                <TextView
                    android:id="@+id/textViewHeaderWritingWrongs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:width="0dp"
                    android:padding="10dp"
                    android:text="0"
                    android:textAlignment="textEnd" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutTotal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#ECC85B"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewHeaderTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/results_history_header_total"
                android:textAlignment="center" />

            <LinearLayout
                android:id="@+id/linearLayoutTotalInt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewHeaderTotalRights"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:width="0dp"
                    android:padding="10dp"
                    android:text="0"
                    android:textAlignment="textEnd" />

                <TextView
                    android:id="@+id/textViewHeaderTotalWrongs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:width="0dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="24dp"
                    android:paddingBottom="10dp"
                    android:text="0"
                    android:textAlignment="textEnd" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/listViewResultEntries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="10dp"
        tools:listitem="@layout/view_results_history_item">

    </ListView>
</LinearLayout>
