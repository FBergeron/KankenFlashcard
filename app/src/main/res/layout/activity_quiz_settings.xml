<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QuizSettingsActivity">

    <TextView
        android:id="@+id/textViewWelcome"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginRight="@dimen/margin_left_right"
        android:layout_weight="@dimen/settings_title_weight"
        android:gravity="center"
        android:text="@string/welcome"
        android:textSize="30sp" />

    <LinearLayout
        android:id="@+id/layoutQuizLevel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginRight="@dimen/margin_left_right"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewQuizLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="@string/label_quiz_level" />

        <SeekBar
            android:id="@+id/seekBarQuizLevel"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="4"
            android:progress="0" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutQuizTopics"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginRight="@dimen/margin_left_right"
        android:layout_weight="@dimen/settings_topics_weight"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutQuizTopicsSelector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewQuizTopics"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_weight="3"
                android:text="@string/label_quiz_topics" />

            <Button
                android:id="@+id/buttonQuizTopicsSelector"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="invokeTopicChooser"
                android:text="@string/button_select_topics" />

        </LinearLayout>

        <TextView
            android:id="@+id/textViewSelectedTopics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:textColor="?attr/colorControlActivated"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutQuizType"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginRight="@dimen/margin_left_right"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewQuizType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_quiz_type" />

        <RadioGroup
            android:id="@+id/radioGroupQuizType"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp">

            <RadioButton
                android:id="@+id/radioButtonQuizTypeReading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="@string/label_quiz_type_reading" />

            <RadioButton
                android:id="@+id/radioButtonQuizTypeWriting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/label_quiz_type_writing" />
        </RadioGroup>

    </LinearLayout>

    <Button
        android:id="@+id/buttonStartQuiz"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginRight="@dimen/margin_left_right"
        android:layout_marginTop="20sp"
        android:layout_weight="1"
        android:onClick="startQuiz"
        android:text="@string/button_start_quiz" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginRight="@dimen/margin_left_right"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonShowTermsOfUsage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="showTermsOfUsage"
            android:text="@string/button_show_terms_of_usage" />

        <Button
            android:id="@+id/buttonShowDirections"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="showDirections"
            android:text="@string/button_show_directions" />
    </LinearLayout>

</LinearLayout>